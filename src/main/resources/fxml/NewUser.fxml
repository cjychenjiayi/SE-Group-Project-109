<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.NewUserController" >
    <GridPane alignment="center" hgap="10" vgap="10" stylesheets="@../css/CSS.css">
        <padding>
            <Insets top="25" right="25" bottom="10" left="25"/>
        </padding>
        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Confirm:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="confirmField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="emailField" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>


        <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <ChoiceBox fx:id="genderChoice" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Label text="Portrait:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <ChoiceBox fx:id="portraitChoice" GridPane.columnIndex="1" GridPane.rowIndex="7"/>


        <Button text="Register" fx:id="registerButton" onAction="#register"
                style="-fx-background-color: white; -fx-background-radius: 2px; -fx-border-color: #DDDDDD;"
                GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

</AnchorPane>
